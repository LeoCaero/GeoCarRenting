<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="20dp"
    app:cardBackgroundColor="@color/app_bck_light_grey"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_inward_corner"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="15dp"
        android:paddingEnd="20dp">

        <TextView
            android:id="@+id/ratingTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded"
            android:backgroundTint="@color/md_amber_A400"
            android:drawablePadding="8dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="0,0"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:cornerRadius="50dp"
            app:drawableStartCompat="@drawable/ic_star"
            app:drawableTint="@color/white" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:id="@+id/carImage"
            />

        <TextView
            android:id="@+id/carNameTextView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="15dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="TEST FOR CAR NAME"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="From 199â‚¬ / day"
            android:textSize="18sp" />


    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonCar"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_gravity="bottom|end"
        android:background="@drawable/rounded_button"
        android:contentDescription="@null"

        android:src="@drawable/ic_resource_continue" />

</androidx.cardview.widget.CardView>